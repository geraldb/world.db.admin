
<h3><%= @tag.key %></h3>

<% if @tag.countries.count > 0 %>
<h4><%= @tag.countries.count %> Countries</h4>

<p>
  Download: <%= link_to 'CSV', csv_countries_by_tag_path( @tag ), :title => 'Comma-separated values; tabular data in plain text' %>     
</p>

<p>
  <% @tag.countries.each_with_index do |country,index| %>
    <% if index > 0 %>
      &nbsp;
    <% end %>
     <span class='country-key'>
      <%= country.key %>
     </span> 
     <%= image_tag_for_country( country ) %>
     <%= link_to "#{country.title} (#{country.code})", short_country_path( country ) %>
  <% end %>
</p>
<% end %>

<% if @tag.regions.count > 0 %>
<h4><%= @tag.regions.count %> Regions</h4>

<p>
  <% @tag.regions.each_with_index do |region,index| %>
    <% if index > 0 %>
      &nbsp;
    <% end %>
     <span class='region-key'>
      <%= "#{region.country.key}.#{region.key}" %>
     </span>
     <%= link_to region.title, short_region_path( region ) %>
  <% end %>
</p>
<% end %>
